@model PizzaApp.WebApp.User

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultLocation" class="control-label"></label>
                <select class="form-control" id="DefaultLocation" name="DefaultLocation">
                    <option value="">- Please select a default location -</option>

                    @if (Model.DefaultLocation == 1)
                    {<option selected="selected" value="1">Reston</option>}
                    else { <option value="1">Reston</option> }
                    @if (Model.DefaultLocation == 2)
                    {<option selected="selected" value="2">Herndon</option>}
                    else { <option value="2">Herndon</option> }
                    @if (Model.DefaultLocation == 3)
                    {<option selected="selected" value="3">Sterling</option>}
                    else { <option value="3">Herndon</option> }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

